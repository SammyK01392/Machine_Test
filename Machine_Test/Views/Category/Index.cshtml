@model IEnumerable<Machine_Test.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateCategory">Create New Category</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>
                    <a class="btn btn-secondary" asp-action="EditCategory" asp-route-id="@item.CategoryId">Edit</a>
                    <a class="btn btn-info" asp-action="DetailsCaterory" asp-route-id="@item.CategoryId">Details</a>
                    <a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@item.CategoryId" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }
    </ul>
</nav>

